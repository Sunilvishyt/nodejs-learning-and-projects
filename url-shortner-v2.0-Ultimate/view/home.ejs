<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener - Advanced Edition</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 20px;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
      }

      header {
        text-align: center;
        color: white;
        margin-bottom: 40px;
        padding-top: 20px;
      }

      header h1 {
        font-size: 2.5em;
        margin-bottom: 10px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
      }

      header p {
        font-size: 1.1em;
        opacity: 0.9;
      }

      .alert {
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 8px;
        text-align: center;
        font-weight: 500;
        animation: slideDown 0.3s ease-out;
      }

      .alert-error {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
      }

      .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
      }

      @keyframes slideDown {
        from {
          transform: translateY(-20px);
          opacity: 0;
        }
        to {
          transform: translateY(0);
          opacity: 1;
        }
      }

      .form-card {
        background: white;
        border-radius: 12px;
        padding: 40px;
        margin-bottom: 40px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
      }

      .form-card h2 {
        color: #667eea;
        margin-bottom: 25px;
        font-size: 1.8em;
      }

      .form-group {
        margin-bottom: 20px;
      }

      label {
        display: block;
        color: #333;
        font-weight: 600;
        margin-bottom: 8px;
      }

      input[type="text"],
      input[type="url"] {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-size: 1em;
        transition: all 0.3s ease;
      }

      input[type="text"]:focus,
      input[type="url"]:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
      }

      .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
      }

      button.btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 8px;
        font-size: 1em;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 10px;
      }

      button.btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
      }

      button.btn:active {
        transform: translateY(0);
      }

      .urls-container {
        margin-top: 40px;
      }

      .urls-container h2 {
        color: white;
        margin-bottom: 20px;
        font-size: 1.8em;
      }

      .url-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        display: grid;
        grid-template-columns: 1fr auto 150px;
        gap: 20px;
        align-items: center;
        transition: all 0.3s ease;
      }

      .url-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.15);
      }

      .url-info {
        min-width: 0;
      }

      .short-url {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 10px;
      }

      .short-url-link {
        background: #f5f5f5;
        padding: 10px 15px;
        border-radius: 6px;
        color: #667eea;
        text-decoration: none;
        font-weight: 600;
        word-break: break-all;
        flex: 1;
      }

      .short-url-link:hover {
        background: #e8e8ff;
      }

      .copy-btn {
        background: #667eea;
        color: white;
        border: none;
        padding: 8px 12px;
        border-radius: 6px;
        cursor: pointer;
        font-size: 0.9em;
        transition: all 0.3s ease;
      }

      .copy-btn:hover {
        background: #764ba2;
      }

      .copy-btn.copied {
        background: #28a745;
      }

      .original-url {
        color: #666;
        font-size: 0.95em;
        word-break: break-all;
        margin-bottom: 8px;
      }

      .url-meta {
        display: flex;
        gap: 20px;
        font-size: 0.9em;
        color: #999;
      }

      .meta-item {
        display: flex;
        align-items: center;
        gap: 5px;
      }

      .qr-code {
        text-align: center;
      }

      .qr-code img {
        width: 140px;
        height: 140px;
        border-radius: 8px;
        border: 2px solid #e0e0e0;
      }

      .actions {
        display: flex;
        gap: 10px;
        flex-direction: column;
      }

      .btn-analytics {
        background: #17a2b8;
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 6px;
        cursor: pointer;
        font-size: 0.9em;
        text-decoration: none;
        text-align: center;
        transition: all 0.3s ease;
      }

      .btn-analytics:hover {
        background: #138496;
      }

      .btn-delete {
        background: #dc3545;
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 6px;
        cursor: pointer;
        font-size: 0.9em;
        transition: all 0.3s ease;
      }

      .btn-delete:hover {
        background: #c82333;
      }

      .no-urls {
        color: white;
        text-align: center;
        padding: 40px;
        font-size: 1.1em;
      }

      .stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
      }

      .stat-card {
        background: white;
        padding: 20px;
        border-radius: 12px;
        text-align: center;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
      }

      .stat-card h3 {
        color: #999;
        font-size: 0.9em;
        margin-bottom: 10px;
        text-transform: uppercase;
      }

      .stat-card .number {
        color: #667eea;
        font-size: 2.5em;
        font-weight: bold;
      }

      @media (max-width: 768px) {
        header h1 {
          font-size: 2em;
        }

        .form-row {
          grid-template-columns: 1fr;
        }

        .url-card {
          grid-template-columns: 1fr;
          gap: 15px;
        }

        .qr-code {
          display: none;
        }

        .stats {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <header>
        <h1>üîó URL Shortener</h1>
        <p>Create short, shareable links with analytics and QR codes</p>
      </header>

      <% if (error) { %>
      <div class="alert alert-error"><%= error %></div>
      <% } %>

      <% if (success) { %>
      <div class="alert alert-success"><%= success %></div>
      <% } %>

      <div class="form-card">
        <h2>Create a Short URL</h2>
        <form method="POST" action="/">
          <div class="form-row">
            <div class="form-group">
              <label for="url">Original URL *</label>
              <input
                type="url"
                id="url"
                name="url"
                placeholder="https://example.com/very/long/url"
                required
              />
            </div>
            <div class="form-group">
              <label for="customUrl">Custom Short URL (Optional)</label>
              <input
                type="text"
                id="customUrl"
                name="customUrl"
                placeholder="my-link (alphanumeric, hyphens allowed)"
              />
            </div>
          </div>
          <button type="submit" class="btn">Generate Short URL</button>
        </form>
      </div>

      <div class="urls-container">
        <% if (data && data.length > 0) { %>
        <div class="stats">
          <div class="stat-card">
            <h3>Total URLs</h3>
            <div class="number"><%= data.length %></div>
          </div>
          <div class="stat-card">
            <h3>Total Clicks</h3>
            <div class="number">
              <%= data.reduce((sum, url) => sum + (url.clicks || 0), 0) %>
            </div>
          </div>
        </div>

        <h2>Your Short URLs</h2>
        <% data.forEach((val) => { %>
        <div class="url-card">
          <div class="url-info">
            <div class="short-url">
              <a
                href="http://localhost:8000/<%= val.urlid %>"
                class="short-url-link"
                target="_blank"
              >
                http://localhost:8000/<%= val.urlid %>
              </a>
              <button
                class="copy-btn"
                onclick="copyToClipboard('http://localhost:8000/<%= val.urlid %>', this)"
              >
                üìã Copy
              </button>
            </div>
            <div class="original-url" title="<%= val.redirect %>">
              <strong>Original:</strong> <%= val.redirect.substring(0, 60) %><%=
              val.redirect.length > 60 ? '...' : '' %>
            </div>
            <div class="url-meta">
              <span class="meta-item" title="Created on <%= val.createdAt %>">
                üìÖ <%= new Date(val.createdAt).toLocaleDateString() %>
              </span>
              <span class="meta-item">
                üëÜ <%= val.clicks %> clicks
              </span>
              <% if (val.lastClickedAt) { %>
              <span
                class="meta-item"
                title="Last clicked on <%= val.lastClickedAt %>"
              >
                üïê <%= new Date(val.lastClickedAt).toLocaleDateString() %>
              </span>
              <% } %>
            </div>
          </div>

          <div class="qr-code">
            <% if (val.qrCode) { %>
            <img src="<%= val.qrCode %>" alt="QR Code" title="Scan to visit" />
            <% } %>
          </div>

          <div class="actions">
            <a href="/api/analytics/<%= val.urlid %>" class="btn-analytics" target="_blank">
              üìä Analytics
            </a>
            <a href="/delete/<%= val.urlid %>" class="btn-delete" onclick="return confirm('Are you sure?')">
              üóëÔ∏è Delete
            </a>
          </div>
        </div>
        <% }); %>
        <% } else { %>
        <div class="no-urls">
          <p>No URLs created yet. Create your first short URL above! üéâ</p>
        </div>
        <% } %>
      </div>
    </div>

    <script>
      function copyToClipboard(text, button) {
        navigator.clipboard.writeText(text).then(() => {
          const originalText = button.textContent;
          button.textContent = "‚úÖ Copied!";
          button.classList.add("copied");

          setTimeout(() => {
            button.textContent = originalText;
            button.classList.remove("copied");
          }, 2000);
        });
      }
    </script>
  </body>
</html>
